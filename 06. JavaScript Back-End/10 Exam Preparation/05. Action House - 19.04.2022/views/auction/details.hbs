<!-- Details Page -->
<section id="catalog-section">

  <h1 class="item">
    {{auction.title}}
  </h1>
  <div class="item padded">

    <div class="layout right large">

      <div class="col">
        <img src="{{auction.imageUrl}}" class="img-large" />
      </div>

      <div class="content pad-med">

        <p>In category: <strong>{{auction.category}}</strong></p>
        <p>{{auction.description}}</p>

        <div class="align-center">
          <div>
            Current price: $<strong>{{auction.price}}</strong>
          </div>
          {{#if user}}
            {{#if auction.isBidder}}
              <!-- If current user is the bidder -->
              <div>
                You are currently the
                <strong>highest bidder</strong>
                for this auction
              </div>
            {{else}}
              <!-- If current user can place a bid -->
              <form
                class="vertical"
                method="post"
                action="/auction/bid/{{auction._id}}"
              >
                <label><span>Bid amount</span><input
                    type="number"
                    name="amout"
                    value="{{user.amout}}"
                  /></label>
                <input class="action" type="submit" value="Place bid" />
              </form>
            {{/if}}
          {{/if}}
        </div>

      </div>
    </div>

    <footer>Listed by Peter Jackson</footer>
  </div>

</section>