<div class="container">
  <h1 class="my-4">Title : {{course.title}}</h1>

  <div class="row">
    <div class="col-md-8">
      <img class="img-fluid" src="{{course.imageUrl}}" alt="JavaScript" />
    </div>

    <div class="col-md-4 text-center">
      <h4 class="my-3">Duration</h4>
      <p>{{course.duration}}</p>
      <h3 class="my-3">Description</h3>
      <p>{{course.description}}</p>
      {{#if course.isOwner}}
        <a
          class="btn btn-danger"
          href="/course/delete/{{course._id}}"
        >Delete</a>
        <a class="btn btn-warning" href="/course/edit/{{course._id}}">Edit</a>
      {{else}}
        {{#if course.isEnroll}}
          <span class="enrolled-span">You are already enrolled</span>
        {{else}}
          <a
            class="btn btn-primary"
            href="/course/enroll/{{course._id}}"
          >Enroll</a>
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>