<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>BookingUni</title>
    <link rel="stylesheet" href="/static/css/style.css" />
  </head>

  <body>

    <div id="container">
      {{#if error}}
        <div class="notification errorBox">
          {{error}}
        </div>
      {{/if}}

      <nav>
        <div class="left-container">
          <ul>
            <li><a href="/">Home</a></li>
            {{#if user}}
              <li><a href="/hotel/create">Add +</a></li>
            {{else}}
              <li><a href="/auth/login">Login</a></li>
              <li><a href="/auth/register">Register</a></li>
            {{/if}}
          </ul>
        </div>
        {{#if user}}
          <div class="right-container">
            <a href="/profile" class="log-out">{{user.username}}</a>
            <a href="/auth/logout" class="log-out">Logout</a>
          </div>
        {{/if}}

      </nav>

      {{{body}}}

      <footer>@SoftUni - JS Back-end - BookingUni 2020</footer>
    </div>

  </body>

</html>