<section id="details-info">
  <h1>Details</h1>
  <div class="coin-image">
    <img src="{{crypto.imageUrl}}" />
  </div>

  <div class="coin-info">
    <div class="coin-text">
      <h1 id="name">{{crypto.name}}</h1>
      <h3 id="payment">Payment method: {{crypto.method}}</h3>
      <p id="price"><span>Price: ${{crypto.price}}</span></p>
      <p id="description">{{crypto.description}}</p>
    </div>
    <div class="product-btn">
      <!--Only for registered user and author of the publication -->
      {{#if isAuthenticated}}
        {{#if isOwner}}
          <div class="author">
            <a href="/crypto/{{crypti._id}}/edit" class="btn-edit">Edit</a>
            <a
              href="/crypto/{{crypti._id}}/delete"
              class="btn-delete"
            >Delete</a>
          </div>

        {{else}}
          {{#if isBuyer}}
            <!-- Logged in user who has already buy this crypto-->
            <p class="buy-message">You already bought these crypto coins.</p>
          {{else}}
            <!-- Logged in user who has not yet buy this crypto-->
            <a href="/crypto/{{crypti._id}}/buy" class="btn-buy">Buy</a>
          {{/if}}

        {{/if}}
      {{/if}}

    </div>
  </div>
</section>